<div class="card">
  <div class="card-header">
    <h1><%= @task.title %></h1>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @task.details %></h5>
    <p class="card-text">
      <% if @task.completed %>
        <i class="far fa-check-square"></i> This task is complete!
      <% else %>
        <i class="far fa-square"></i> This task is not completed!
      <% end %>
    </p>
    <%= link_to("back to list", tasks_path) %>
    <br>
    <%= link_to("Edit", edit_task_path(@task)) %>
  </div>
</div>
